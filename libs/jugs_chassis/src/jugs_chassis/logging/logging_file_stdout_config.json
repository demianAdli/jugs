{
  "version": 1,
  "disable_existing_loggers": false,
  "filters": {
    "ctx": { "()": "jug_chassis.logging.setup_logging.ContextFilter" }
  },
  "formatters": {
    "json_out": {
      "format": "%(asctime)s %(levelname)s %(message)s [%(request_id)s]"
    },
    "json": {
      "()": "jug_chassis.logging.setup_logging.JsonFormatter"
    }
  },
  "handlers": {
    "stdout": {
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout",
      "formatter": "json_out",
      "filters": ["ctx"]
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filters": ["ctx"],
      "filename": "logs/jugs.log",
      "maxBytes": 3000000,
      "backupCount": 10
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": ["stdout", "file"]
  },
  "loggers": {
    "werkzeug": { "level": "INFO" },
    "urllib3": { "level": "WARNING" },
    "marshmallow": { "level": "WARNING" }
  }
}
