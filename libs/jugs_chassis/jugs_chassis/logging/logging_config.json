{
  "version": 1,
  "disable_existing_loggers": false,
  "filters": {
    "ctx": { "()": "jug_chassis.logging.setup_logging.ContextFilter" }
  },
  "formatters": {
    "json": {
      "format": "%(asctime)s %(levelname)s %(message)s [%(request_id)s]"
    }
  },
  "handlers": {
    "stdout": {
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout",
      "formatter": "json",
      "filters": ["ctx"]
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["stdout"]
  },
  "loggers": {
    "werkzeug": { "level": "INFO" },
    "urllib3": { "level": "WARNING" },
    "marshmallow": { "level": "WARNING" }
  }
}
